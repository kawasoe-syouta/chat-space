.side-bar
  .side-bar__user-name
    .top-items
      %h3.top-items__name
        = current_user.name
      %ul.top-items__iconlist
        %li.top-items__iconlist__icona
          =link_to new_group_path do
            = icon('far', 'edit', class: 'top-items__iconlist__icona-btna')
        %li.top-items__iconlist__iconb
          =link_to edit_user_path(current_user) do
            = icon('far', 'cog', class: 'top-items__iconlist__iconb-btnb')
  .side-bar__group-list
    - current_user.groups.each do |group|
      .groups
        = link_to group_messages_path(group), class:"groups__group-name" do
          = group.name
        .groups__group-message
          = group.show_last_message