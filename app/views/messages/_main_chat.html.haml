.chat-main
  .chat-main__group-info
    .main-header
      .main-header__header-left
        = @group.name
        .header-left-member
          Member : 
          - @group.users.each do |users|
            = users.name
      .main-header__header-right
        =link_to 'edit', class: "btn-edit" do
          Edit
  .chat-main__message-list
    = render @messages
    
  .chat-main__message-form
    = form_with model: [@group, @message], html: {class: "form"}, local: true do |f|
      .form__contents
        = f.text_field :content, class: 'text', placeholder: 'type a message'
        = f.label :image, class: 'form__contents__input-image' do
          = icon('far', 'image', class: 'icon')
          = f.file_field :image, class: 'file'
      = f.submit 'Send', class: 'btn'
